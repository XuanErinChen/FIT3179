{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 600,
  "title": "Wildlife Importer Rank from 2016 to 2017",
  "data": {
    "url": "https://raw.githubusercontent.com/XuanErinChen/FIT3179/main/data/WildlifeTrade.csv"
  },
  "params": [
    {
      "name": "rank_selection",
      "bind": {
        "input": "range",
        "min": 3,
        "max": 10,
        "step": 1,
        "name": "Rank Number: "
      }
    }
  ],
  "transform": [
    {"calculate": "datum.Import", "as": "Importer"},
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "ImporterReportedQuantity",
          "as": "Quantity Imported"
        }
      ],
      "groupby": ["Importer"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Quantity Imported", "order": "descending"}]
    },
    {"filter": "datum.rank <= rank_selection||datum.rank<=3"}
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "tooltip": {"content": "encoding"}
      },
      "encoding": {
        "theta": {"field": "Quantity Imported", "type": "quantitative"},
        "color": {
          "field": "Importer",
          "type": "nominal",
          "scale": {
            "domain": [
              "China",
              "Italy",
              "France",
              "Germany",
              "Malaysia",
              "Japan",
              "Netherlands",
              "Hong Kong",
              "United Arab Emirates",
              "United States"
            ],
            "range": [
              "lightBlue",
              "Gold",
              "darkorange",
              "Purple",
              "Darkblue",
              "Grey",
              "Violet",
              "wheat",
              "Lightgrey",
              "black"
            ]
          },
          "legend": {"legendX": 200, "legendY": 300}
        }
      }
    },
    {"mark": "text"}
  ],
  "view": {"stroke": null},
  "config": {}
}