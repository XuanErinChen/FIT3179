{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1100,
  "height": 500,
  "title": "World Wildlife Exporter Distribution from 2016 to 2017",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/XuanErinChen/FIT3179/main/js/map.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/XuanErinChen/FIT3179/main/data/WildlifeTrade.csv"
      },
      "transform": [
        {"filter": {"not": {"field": "Import", "equal": "#N/A"}}},
        {"calculate": "datum.Export", "as": "Exporter"},
        {
          "joinaggregate": [
            {
              "op": "valid",
              "field": "ExporterReportedQuantity",
              "as": "Number of Trade Exported"
            },
            {
              "op": "sum",
              "field": "ExporterReportedQuantity",
              "as": "Quantity Traded"
            }
          ],
          "groupby": ["Exporter"]
        }
      ],
      "layer": [
        {
          "mark": {"type": "circle", "stroke": "darkslateblue"},
          "encoding": {
            "longitude": {"field": "ExportLon", "type": "quantitative"},
            "latitude": {"field": "ExportLan", "type": "quantitative"},
            "size": {
              "field": "Number of Trade Exported",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [1, 100, 500, 1000, 3000, 5000],
                "range": [0, 50, 100, 200, 400, 600]
              }
            },
            "tooltip": [
              {"field": "Exporter", "type": "nominal"},
              {"field": "Number of Trade Exported", "type": "quantitative"},
              {"field": "Quantity Traded", "type": "quantitative"}
            ]
          }
        }
      ]
    }
  ],
  "config": {}
}
